package model;

public class Aeronave {
	
	private String modelo;
	
	private String cor;

	private int capacidadeMax;
	
	private float velocidadeMax;
	
	public String getModelo() {
		return modelo;
	}

	public void setModelo(String modelo) {
		this.modelo = modelo;
	}

	public String getCor() {
		return cor;
	}

	public void setCor(String cor) {
		this.cor = cor;
	}

	public int getCapacidadeMax() {
		return capacidadeMax;
	}

	public void setCapacidadeMax(int capacidadeMax) {
		this.capacidadeMax = capacidadeMax;
	}

	public float getVelocidadeMax() {
		return velocidadeMax;
	}

	public void setVelocidadeMax(float velocidadeMax) {
		this.velocidadeMax = velocidadeMax;
	}
	
	public void decolar() {
		System.out.println("A aeronave"+this.modelo+" esta decolando");
	}
	
	public void pousar() {
		System.out.println("A aeronave"+this.modelo+" esta pousando");
	}
	
	

}
